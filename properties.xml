<?xml version="1.0" encoding="UTF-8"?>
<properties>
	<!-- The time interval to report over in minutes-->
	<intervalMins>30</intervalMins>
	<!-- The new relic account -->
	<account>1003053</account>
	<proxy>
		<host>localhost</host>
		<port>3128</port>
	</proxy>
	<metrics>
		<metric>
			<applicationId>6912152</applicationId>
			<name>XMLAPI throughtput (req/min)</name>
